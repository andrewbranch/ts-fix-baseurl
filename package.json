{
  "name": "@andrewbranch/ts-fix-baseurl",
  "version": "1.0.9",
  "description": "CLI to migrate TypeScript projects away from `baseUrl` usage",
  "license": "MIT",
  "author": "Andrew Branch",
  "type": "module",
  "bin": {
    "ts-fix-baseurl": "dist/cli.js"
  },
  "main": "dist/main.js",
  "imports": {
    "#typescript": "./vendor/typescript/typescript.js"
  },
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "test": "node --experimental-strip-types --test ./test/**/*.test.ts",
    "test:watch": "node --experimental-strip-types --test --watch ./test/**/*.test.ts",
    "cli": "node --experimental-strip-types ./src/cli.ts",
    "fmt": "dprint fmt",
    "fmt:check": "dprint check",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "dprint": "^0.50.1",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "vendor"
  ]
}
